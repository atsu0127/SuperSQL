GENERATE HTML
cross_tab({[i.name@{width=100, height=50}! {count[i.id]||'です'}@{width=100, height=50}],, [d.name@{width=100, height=50}! {count[sa.credit]||'じゃよ'}@{width=100, height=50}],}, {[st.state@{width=100}, sum[st.id]@{width=100}]!! [sa.date@{width=100}, {count[sa.credit]||'だよ'}@{width=100}]!}, sum[sa.quantity]@{width=98})@{side_width=200}
FROM store st, sale sa, item i, dept d
WHERE st.id = sa.store AND sa.item = i.id AND sa.dept = d.id